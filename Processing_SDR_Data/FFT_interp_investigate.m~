clear all 
close all 
clc 

%% plotting sine waves
dt1 = 3*pi/30;
t1 = 0:dt1:3*pi;
% y1 = sin(t1).^2 .* cos(t1);
y1 = sin(t1);


N = 200;
y2 = interpft(y1,N);
dt2 = dt1*length(t1)/N;
t2 = 0:dt2:3*pi;
y2 = y2(1:length(t2));

interpfactor = 8;
y3 = resampleFDZP(y1, interpfactor);
dt3 = dt1/interpfactor;
t3 = 0:dt3:3*pi;
y3 = y3(1:length(t3));

% 
% figure();
% hold on
% plot(t1,y1,'o', 'DisplayName','Input')
% plot(t3,y3,'.', 'DisplayName','Output')
% legend('Location','southeast')

%% why are we adding zeros in the middle?
dt = 3*pi/300;
t = 0:dt:3*pi;
% y1 = sin(t1).^2 .* cos(t1);
y= sin(t);

padlen = length(y)*(interpfactor - 1);
% Compute FFT
z = fft(y);
% Construct a new spectrum (row vector) by centering zeros
zp = [z zeros(1, padlen)];
